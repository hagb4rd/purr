module Data.Function {

  import Purr.Core
  
  export ( Function? )
  
  export $a identity => $a
  export $a constant => ^{ $b => $a }
  export $f ->> $g => ^{ $a => $g($f($a)) }
  export $f <<- $g => ^{ $a => $f($g($a)) }
  export $f flip => ^{ $a $b => $f($b, $a) }

  implement To-String for Function {
    method $this to-string => ffi "self.$describe($this)"
  }

}